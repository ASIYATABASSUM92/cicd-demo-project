name: CI/CD Pipeline

# When to run: on push to main/develop, or pull requests
on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

# Environment variables available to all jobs
env:
  DOCKER_IMAGE: harisladoo/cicd-demo-app
  NODE_VERSION: '18'

jobs:
  # Job 1: Run tests
  test:
    name: Run Tests
    runs-on: ubuntu-latest
    
    steps:
      # Step 1: Checkout code
      # Why: Gets your code into the runner environment
      - name: Checkout code
        uses: actions/checkout@v3
      
      # Step 2: Setup Node.js
      # Why: Installs the specific Node.js version
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      # Step 3: Install dependencies
      # Why: npm ci is faster and more reliable than npm install for CI
      - name: Install dependencies
        run: npm ci
      
      # Step 4: Run tests
      # Why: Ensures code quality before building/deploying
      - name: Run tests
        run: npm test
      
      # Step 5: Upload coverage report
      # Why: Tracks code coverage over time
      - name: Upload coverage
        uses: actions/upload-artifact@v3
        with:
          name: coverage-report
          path: coverage/
          retention-days: 7

  # Job 2: Build and push Docker image
  build:
    name: Build Docker Image
    needs: test  # Only runs if test job succeeds
    runs-on: ubuntu-latest
    # Only run on main branch (not PRs)
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      # Step 1: Set up Docker Buildx
      # Why: Enables advanced Docker build features
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v2
      
      # Step 2: Login to Docker Hub
      # Why: Allows pushing images to your Docker Hub account
      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      
      # Step 3: Extract metadata
      # Why: Creates tags and labels for the image
      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v4
        with:
          images: ${{ env.DOCKER_IMAGE }}
          tags: |
            type=sha,prefix={{branch}}-
            type=raw,value=latest,enable={{is_default_branch}}
      
      # Step 4: Build and push
      # Why: Creates the Docker image and uploads to Docker Hub
      - name: Build and push Docker image
        uses: docker/build-push-action@v4
        with:
          context: .
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # Job 3: Deploy (example with deployment notification)
  deploy:
    name: Deploy Application
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      # This is a placeholder - you'd replace with actual deployment
      - name: Deploy notification
        run: |
          echo "ðŸš€ Deploying version with tag: ${{ github.sha }}"
          echo "Would deploy to production here"
          # Example deployment commands:
          # - kubectl apply -f k8s/
          # - aws ecs update-service
          # - docker-compose pull && docker-compose up -d
      
      # Example: Deploy to a server via SSH
      # - name: Deploy to production
      #   uses: appleboy/ssh-action@master
      #   with:
      #     host: ${{ secrets.SERVER_HOST }}
      #     username: ${{ secrets.SERVER_USER }}
      #     key: ${{ secrets.SSH_PRIVATE_KEY }}
      #     script: |
      #       cd /app
      #       docker-compose pull
      #       docker-compose up -d

      - name: Deployment success
        run: echo "âœ… Deployment completed successfully!"
